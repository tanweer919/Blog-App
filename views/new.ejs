<% include ./partials/header %>
        <div class="ui main Site-content text container segment">
            <div class="ui huge header">New Post</div>
            <form class="ui form" action="/blogs" method="post">
                <div class="field">
                    <label>User name</label>
                    <input type="text" name="blog[name]" placeholder="Your name" required>
                </div>
                <div class="field">
                    <label>Title</label>
                    <input type="text" name="blog[title]" placeholder="Title of the post" required>
                </div>
                <div class="field">
                    <label>Image</label>
                    <input type="text" name="blog[image]" placeholder="Image URL" required>
                </div>
                <div class="field">
                    <label>Blog content</label>
                    <textarea name="blog[body]" placeholder="Enter the post content" required></textarea>
                </div>
                <input class="ui violet big basic button" type="submit">
            </form>
        </div>
<% include ./partials/footer %>